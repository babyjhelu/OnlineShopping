<html>
<body class="login_background">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="container">

      <div class="row" id="pwd-container">
        <div class="col-md-4"></div>

        <div class="col-md-4">
          <section class="login-form">

            <form method="post" action="#" role="login">
              <div class="text-center">
                <%= link_to new_admin_session_path do %>
                    <%= image_tag 'logo.png', :class => "logo-size"  %>
                <% end %>
              </div>

            <%= f.email_field :email, autofocus: true, :placeholder => "Email", :class => "form-control input-lg" , :style => "margin-bottom: 5px;" %>
            <%= f.password_field :password, autocomplete: "off", :class => "form-control input-lg", :placeholder => "Password" %>
              <% if flash[:notice] %>
                  <p class="btn btn-danger flash-notice"><%= flash[:notice] %></p>
              <% end %>
              <% if flash[:alert] %>
                  <p class="btn btn-danger flash-notice"><%= flash[:alert] %></p>
              <% end %><br />


            <%= f.submit "Sign up" , :class => "btn btn-lg btn-primary btn-block" %>

        <% end %>

        <%= render "devise/shared/links" %>
        </form>
        </section>
        </div>
        </div>
    </div>
</body>
</html>