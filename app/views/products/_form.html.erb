<%= nested_form_for(@product, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @product.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h4>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :product_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :product_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :available_sizes, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :available_sizes, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :available_colors, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :available_colors, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
      <%= f.label :image, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.file_field :image, class: "form-control" %>
      </div>
    </div>
    <div class="form-group hidden">
      <%= f.label :category_id , class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
       <%= f.text_field :category_id , :value => @category.id %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :status, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.check_box :status, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.fields_for :category do |li| %>
        <%= li.text_field :category_name, class: "form-control" , placeholder: "Category Name" %><br />
        <%= li.text_field :description, class: "form-control" , placeholder: "Description" %><br />
        <%= li.file_field :image, class: "form-control" , placeholder: "Image" %><br />
          <%= li.check_box :status, class: "form-control" %><br />

            <%= li.link_to_remove "Remove Item" , class: "btn btn-danger " %><br /><br />
        <% end %>
        <%= f.link_to_add "Add item", :category , class: "btn btn-success" %>
        </div>
      </div>



  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
