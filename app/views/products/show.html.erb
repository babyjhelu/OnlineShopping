<div class="page-header">
  <%= link_to products_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_product_path(@product), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1 class="glyphicon glyphicon-phone">Show Smartphones</h1>
</div>

<dl class="dl-horizontal show-list">
  <dt>Product name:</dt>
  <dd><%= @product.product_name %></dd>

  <dt>Available sizes:</dt>
  <dd><%= @product.available_sizes %></dd>

  <dt>Available colors:</dt>
  <dd><%= @product.available_colors %></dd>

  <dt>Category:</dt>
  <dd><%= @product.category_id %></dd>

  <dt>Image:</dt>

  <div class="col-md-4"><%=image_tag @product.image , :class => "thumbnail" %></div>

</dl>
