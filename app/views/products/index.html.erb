<div class="page-header">
  <%= link_to new_product_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Product
  <% end %>
  <h1 class="title">Listing Products</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Product name</th>
      <th>Available sizes</th>
      <th>Available colors</th>
      <th>Option</th>
    </tr>
    </thead>

    <tbody>
    <%= content_tag_for(:tr, @products) do |product| %>
        <td><%= product.product_name %></td>
        <td><%= product.available_sizes %></td>
        <td><%= product.available_colors %></td>
        <td>
          <%= link_to 'Show', product , :class => "btn btn-primary" %>
          <%= link_to 'Edit', edit_product_path(product) , :class => "btn btn-success" %>
          <%= link_to 'Destroy', product, method: :delete, data: {confirm: 'Are you sure?'} , :class => "btn btn-danger" %>
        </td>
    <% end %>
    </tbody>
  </table>
</div>
